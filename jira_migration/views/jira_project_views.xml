        <field name="name">Reset last update</field>
        <field name="groups_id" eval="[(4, ref('project_management.group_jira_manager'))]"/>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="project_management.jira_project" />
        <field name="state">code</field>
