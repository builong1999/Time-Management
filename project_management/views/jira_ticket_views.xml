<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="jira_ticket_tree_view" model="ir.ui.view">
        <field name="name">Jira Tickets</field>
        <field name="priority">1</field>
        <field name="model">jira.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="ticket_name"/>
                <field name="ticket_key"/>
                <field name="story_point"/>
                <field name="ticket_url"/>
            </tree>
        </field>
    </record>

    <record id="jira_ticket_form_view" model="ir.ui.view">
        <field name="name">Jira Tickets</field>
        <field name="priority">1</field>
        <field name="model">jira.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="ticket_name" class="oe_edit_only"/>
                    <h1>
                        <field name="ticket_name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="ticket_key"/>
                            <field name="ticket_url"/>
                            <field name="story_point"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="progress_start_time"/>
                            <field name="suitable_assignee" invisible="1"/>
                            <field name="assignee_id" domain="[('id','in', suitable_assignee)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Log">
                            <group>
                                <field name="time_log_ids"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="jira_ticket_search_view" model="ir.ui.view">
        <field name="name">Jira Tickets</field>
        <field name="model">jira.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field name="ticket_key"/>
                <field name="ticket_name"/>
                <filter string="My tickets" name="filter_my_ticket" domain="[('assignee_id','=', uid)]"/>
<!--                Group-->
                <separator/>
                <filter string="Project" name="group_by_project" context="{'group_by':'project_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_jira_ticket" model="ir.actions.act_window">
        <field name="name">Jira Tickets</field>
        <field name="res_model">jira.ticket</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_filter_my_ticket': True, 'search_default_group_by_project': True}</field>
        <field name="view_id" ref="jira_ticket_tree_view"/>
        <field name="search_view_id" ref="project_management.jira_ticket_search_view"/>
    </record>
</odoo>