<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="jira_ticket_tree_view" model="ir.ui.view">
        <field name="name">Jira Tickets</field>
        <field name="priority">1</field>
        <field name="model">jira.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="ticket_name"/>
                <field name="ticket_key"/>
                <field name="story_point"/>
                <field name="ticket_url"/>
                <field name="status_id"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="jira_ticket_form_view" model="ir.ui.view">
        <field name="name">Jira Tickets</field>
        <field name="priority">1</field>
        <field name="model">jira.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_progress_work_log" string="Start" type="object" class="btn-primary"/>
                    <button name="action_pause_work_log" string="Pause" type="object" class="btn-success"
                            attrs="{'invisible':[('progress_cluster_id','=',False)]}"/>
                    <button name="action_done_work_log" string="Done Progress" type="object" class="btn-primary"
                            attrs="{'invisible':[('progress_cluster_id','=',False)]}"/>
                </header>
                <sheet>
                    <label for="ticket_name" class="oe_edit_only"/>
                    <h1>
                        <field name="ticket_name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="ticket_key"/>
                            <field name="ticket_url"/>
                            <field name="story_point"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="duration"/>
                            <field name="progress_cluster_id"/>
                            <field name="suitable_assignee" invisible="1"/>
                            <field name="assignee_id" domain="[('id','in', suitable_assignee)]"/>
                            <field name="last_export" group="base.group_no_one"/>
                            <field name="last_start" group="base.group_no_one"/>
                            <field name="active_duration" group="base.group_no_one"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Logs">
                            <field name="time_log_ids">
                                <tree editable="bottom">
                                    <field name="state"/>
                                    <field name="time"/>
                                    <field name="description"/>
                                    <field name="user_id"/>
                                    <field name="duration" optional="hide"/>
                                    <field name="source" optional="hide"/>
                                    <field name="write_date" optional="hide"/>
                                    <field name="create_date" string="Start Date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Work Log Breakdowns">
                            <field name="work_log_ids">
                                <tree editable="bottom" decoration-muted="state == 'cancel'">
                                    <field name="state"/>
                                    <field name="start"/>
                                    <field name="end"/>
                                    <field name="duration" optional="hide"/>
                                    <field name="description"/>
                                    <field name="user_id"/>
                                    <field name="source" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="jira_ticket_search_view" model="ir.ui.view">
        <field name="name">Jira Tickets</field>
        <field name="model">jira.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field name="ticket_key"/>
                <field name="ticket_name"/>
                <filter string="My tickets" name="filter_my_ticket" domain="[('assignee_id','=', uid)]"/>
                <separator/>
                <filter string="In Progress" name="filter_in_progress" domain="[('status_value','=', 'new')]"/>
                <separator/>
                <filter string="Project" name="group_by_project" context="{'group_by':'project_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_jira_ticket" model="ir.actions.act_window">
        <field name="name">Jira Tickets</field>
        <field name="res_model">jira.ticket</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_filter_my_ticket': True, 'search_default_group_by_project': True,
            'search_default_filter_in_progress': True}
        </field>
        <field name="view_id" ref="jira_ticket_tree_view"/>
        <field name="search_view_id" ref="project_management.jira_ticket_search_view"/>
    </record>
</odoo>